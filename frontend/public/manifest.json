{
    "manifest_version": 2,
    "version": "1.0",
    "short_name": "Time Tracer",
    "name": "Time Tracer",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_icon" : "/logo.png",
        "default_title": "Time Tracer",
        "default_popup": "popup.html"
    }
}
